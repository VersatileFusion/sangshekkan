# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# Database Configuration (MongoDB Atlas or local MongoDB)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/khanom_sangshekan_db?retryWrites=true&w=majority"

# Authentication Secret (JWT) - Generate a secure random string
AUTH_SECRET="your-super-secure-jwt-secret-key-here"

# Asset Public Base URL (for production)
ASSET_PUBLIC_BASE_URL="https://your-app.onrender.com"

# ===========================================
# SMS.IR CONFIGURATION (PRODUCTION)
# ===========================================

# SMS Driver (must be 'smsir' for SMS.ir integration)
SMS_DRIVER=smsir

# SMS.ir API Key (Get from: https://www.sms.ir/panel)
SMS_API_KEY=your_sms_ir_api_key_here

# SMS.ir Line Number (Your verified line number)
SMS_SENDER=your_line_number_here

# SMS.ir Template Name/ID (The template you created in SMS.ir panel)
SMS_TEMPLATE_NAME=your_template_name_here

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Disable mock mode for production
SMS_MOCK_MODE=false
TEST_ECHO_OTP=false

# Admin notification phone number
SIGNUP_ALERT_MSISDN=09923182082

# ===========================================
# RENDER.COM DEPLOYMENT SETTINGS
# ===========================================

# Node.js environment
NODE_ENV=production

# Port (Render will set this automatically)
PORT=10000

# ===========================================
# OPTIONAL: CLOUD STORAGE (R2/S3)
# ===========================================

# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key
# R2_BUCKET=your_bucket_name
# R2_ENDPOINT=your_r2_endpoint

# ===========================================
# APPLICATION SETTINGS
# ===========================================

SUSPEND_DURATION_DAYS=7
FAMILY_CHAT_ENABLED=true
